<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <springProperty scope="context" name="appName" source="spring.application.name"/>

    <!-- Console Appender with JSON format -->
    <appender name="CONSOLE_JSON" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <includeMdcKeyName>trace_id</includeMdcKeyName>
            <includeMdcKeyName>span_id</includeMdcKeyName>
            <includeMdcKeyName>trace_flags</includeMdcKeyName>
            <customFields>{"service_name":"${appName}"}</customFields>
        </encoder>
    </appender>

    <!-- Console Appender with Pattern (for local development) -->
    <appender name="CONSOLE_PATTERN" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} [trace_id=%X{trace_id:-} span_id=%X{span_id:-}] - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- OpenTelemetry Appender (logs를 OTLP로 전송) -->
    <appender name="OTEL" class="io.opentelemetry.instrumentation.logback.appender.v1_0.OpenTelemetryAppender">
        <captureExperimentalAttributes>true</captureExperimentalAttributes>
        <captureKeyValuePairAttributes>true</captureKeyValuePairAttributes>
    </appender>

    <!-- Profile: local (개발 환경 - 읽기 쉬운 패턴 형식) -->
    <springProfile name="local">
        <root level="INFO">
            <appender-ref ref="CONSOLE_PATTERN"/>
            <appender-ref ref="OTEL"/>
        </root>
        <logger name="yeonjae" level="DEBUG"/>
        <logger name="org.springframework.web" level="DEBUG"/>
    </springProfile>

    <!-- Profile: docker, docker4nas (운영 환경 - JSON 형식) -->
    <springProfile name="docker,docker4nas">
        <root level="INFO">
            <appender-ref ref="CONSOLE_JSON"/>
            <appender-ref ref="OTEL"/>
        </root>
        <logger name="yeonjae" level="INFO"/>
    </springProfile>

    <!-- Default (프로필 없을 때) -->
    <springProfile name="!local &amp; !docker &amp; !docker4nas">
        <root level="INFO">
            <appender-ref ref="CONSOLE_PATTERN"/>
        </root>
    </springProfile>
</configuration>
