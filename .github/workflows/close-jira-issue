name: Close Jira Issue
on:
  issues:
    types: [closed]

jobs:
  close-issue:
    name: Close Jira Issue
    runs-on: ubuntu-latest
    steps:
      - name: Extract Jira Issue Key from Title
        id: extract-key
        run: |
          TITLE="${{ github.event.issue.title }}"
          ISSUE_KEY=$(echo "$TITLE" | grep -oE '[A-Z]+-[0-9]+' | head -1 || true)

          echo "issue_key=$ISSUE_KEY" >> $GITHUB_OUTPUT

      - name: Debug extracted key
        run: echo "Extracted Jira Key is: ${{ steps.extract-key.outputs.issue_key }}"

      - name: Login to Jira
        if: steps.extract-key.outputs.issue_key != ''
        uses: atlassian/gajira-login@v3
        env:
          JIRA_BASE_URL: ${{ secrets.JIRA_BASE_URL }}
          JIRA_API_TOKEN: ${{ secrets.JIRA_API_TOKEN }}
          JIRA_USER_EMAIL: ${{ secrets.JIRA_USER_EMAIL }}

      - name: Transition Jira Issue to Done
        if: steps.extract-key.outputs.issue_key != ''
        run: |
          echo "Transitioning Jira issue: ${{ steps.extract-key.outputs.issue_key }} to '완료'"
        continue-on-error: true

      - name: Perform Jira Transition
        if: steps.extract-key.outputs.issue_key != ''
        uses: atlassian/gajira-transition@v3
        with:
          issue: ${{ steps.extract-key.outputs.issue_key }}
          transition: "완료"

      - name: Log before GitHub comment
        if: steps.extract-key.outputs.issue_key != ''
        run: |
          echo "Adding comment to GitHub Issue #${{ github.event.issue.number }}"
          echo "Jira URL: ${{ secrets.JIRA_BASE_URL }}/browse/${{ steps.extract-key.outputs.issue_key }}"

      - name: Add comment on GitHub issue
        if: steps.extract-key.outputs.issue_key != ''
        uses: actions-cool/issues-helper@v3
        with:
          actions: 'create-comment'
          token: ${{ secrets.GITHUB_TOKEN }}
          issue-number: ${{ github.event.issue.number }}
          body: |
            Jira Issue Closed: [${{ steps.extract-key.outputs.issue_key }}](${{ secrets.JIRA_BASE_URL }}/browse/${{ steps.extract-key.outputs.issue_key }}) ✅
